<% layout("/layout/boilerplate") %>

  <body>
    <form action="/listing/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="row">
        <div class="col-6 offset-3">
          <br>
          <h2>Edit your listing</h2>
          <div class="mb-3">
            <label for="listing[title]" class="form-label">Title</label>

            <input type="text" name="listing[title]" required class="form-control" value="<%= listing.title %>">
           <div class="invalid-feedback">Title must</div>
          </div>
          <div class="mb-3">
            <label for="listing[description]" class="form-label">Description</label>
            <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
            <div class="invalid-feedback">Description is required</div>
          </div>
          <div class="mb-3">
            Original images <br>
            <!-- change the image qulity using cloudnary -->
            <img src="<%= originalImg_URL %>" alt="list image"> 
          </div>

          <div class="mb-3">
            <label for="listing[image]" class="form-label">Upload  New Image</label>
            <input type="file" name="listing[image]" class="form-control">
            <div class="invalid-feedback">Default image you can't remove</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="listing[price]" class="form-label">Price</label>
              <input type="text" name="listing[price]" required class="form-control" value="<%= listing.price %>">
              <div class="invalid-feedback">Price required</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="listing[location]" class="form-label">Location</label>
              <input type="text" name="listing[location]" required class="form-control" value="<%= listing.location %>">
              <div class="invalid-feedback">Location is required</div>
            </div>

          </div>


          <div class="mb-3">
            <label for="listing[country]" class="form-label">Country</label>
            <input type="text" name="listing[country]" required class="form-control" value="<%= listing.country %>">

            <div class="invalid-feedback"> This field required</div>
          </div>
          <button type="submit" class="btn btn-dark btn-update mb-3">Update</button>
           

    </form>
    

    </div>
    </div>