<% layout("/layout/boilerplate") %>

   <body>
      <div class="row">
         <div class="col-6 offset-2  mt-2">
            <div>
               <b>
                  <%=listing.title%>
               </b>
            </div>
            <div class=" card col-6">
               <img src="<%=listing.image%>" alt="list_img">

            </div>

         </div>

         <div class="col-6 offset-2">

            <div>
               <%=listing.description%>

            </div>

            <div>
               <% if (listing.price !=null) { %>
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>
                     <% } else { %>
                        <span>Price not available</span>
                        <% } %>
            </div>

            <div>
               <%=listing.location%>

            </div>

            <div>
               <%=listing.country%>
            </div>

            <div class="mb-3 mt-3">
               <button class=" btn show-btn"> <a href="/listing/<%=listing._id%>/edit"> Edit this listing</a></button>
            </div>
            <div class="mb-3">
               <form action="/listing/<%=listing._id%>?_method=DELETE" method="post">
                  <button class=" btn show-btn"> Delete this listing </button>
               </form>
            </div>


         </div>

   </body>
   <div class="col-6 offset-2">
      <hr>
      <h4> Leave a review</h4>

      <form action="/listing/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">

         <div class="mb-3">
            <label for="rating" class="form-label ">Rating</label><br>
            <input type="range" class="form-range" min="1" max="5" name="reviews[rating]">
         </div>
         <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="reviews[comment]" class="form-control" id="comment" cols="10" rows="3" required ></textarea>
            <div class="invalid-feedback">Please submit valid-feedback</div>
         </div>
         <button class="btn btn-outline-dark"> Submit</button>
      </form>
       <hr>
       <h4> All Review </h4>
       <p><%=listing.review%></p>

   </div>

   </div>